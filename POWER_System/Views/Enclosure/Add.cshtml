@using Microsoft.AspNetCore.Mvc.TagHelpers
@using POWER_System.Models.Enum
@model POWER_System.Services.Models.EnclosureServiceModel

@{
    ViewBag.Title = "Add Enclosure/Cabinet";
}


<h2 class="text-center">@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Plant" class="form-label">Plant Number</label>
                <input asp-for="@Model.Plant" class="form-control" ariarequired="true" />
                <span asp-validation-for="Plant" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Location" class="formlabel">Enclosure/Cabinet Location</label>
                <input asp-for="@Model.Location" class="form-control" ariarequired="true" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Tag" class="form-label">Tag(KKS) Number</label>
                <input asp-for="@Model.Tag" class="form-control" ariarequired="true" />
                <span asp-validation-for="Tag" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Revision" class="form-label">Revision</label>
                <input asp-for="@Model.Revision" class="form-control" value="" />
                <span asp-validation-for="Revision" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Status">Current Enclosure/Cabinet Status</label>
                <select class="form-select" aria-label="status" asp-for="Status" asp-items="@Html.GetEnumSelectList<EnclosureStatus>()">
                </select>
                <span asp-validation-for="@Model.Status" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Comment" class="form-label">Description</label>
                <input asp-for="@Model.Comment" class="form-control" value="" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ProjectId" class="form-label">@Context.GetRouteData().Values["id"]</label>
                <input asp-for="@Model.ProjectId" class="form-control" value="@Context.GetRouteData().Values["id"]" />
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add Enclosure/Cabinet" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
