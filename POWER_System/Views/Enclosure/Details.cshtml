@using POWER_System.Models.Enum
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EnclosureServiceModel

@{
    ViewBag.Title = $"Enclosure {Model.Tag} Details";
}

<div class="row text-center">
    <h2> @Model.Tag - Details:</h2>
</div>

<div class="container text-center">
    <div class="row align-items-start">
        <div class="col">
            <form>
                <button class="btn btn-primary" asp-action="Details" asp-controller="Project"
                        asp-route-id="@Model.ProjectId" type="submit">
                    Back to project details
                </button><br />
            </form>
        </div>
        <div class="col">
            <form method="get">
                <button class="btn btn-primary" asp-action="Add" asp-controller="Order"
                        asp-route-id="@Model.Id" type="submit">
                    Create order for parts delivery
                </button><br />
            </form>
        </div>
    </div>
</div>

<br/>

<div class="container text-center">
    <div class="row align-items-start">
        <div class="col">
            <form>
                <button class="btn btn-primary" asp-action="AddParts" asp-controller="Enclosure" 
                asp-route-id="@Model.Id" type="submit">Add Parts</button><br />
            </form>
        </div>
        <div class="col">
            <form>
                <button class="btn btn-primary" asp-action="EnclosureFullDetails" asp-controller="Enclosure" 
                asp-route-id="@Model.Id" type="submit">Full details</button><br />
            </form>
        </div>
        <div class="col">
            <form>
                <button class="btn btn-primary" asp-action="" asp-controller="" asp-route-id="" 
                type="submit" disabled>Add Cables</button><br />
            </form>
        </div>
    </div>
</div>

<partial name="_PartsSummaryPartial" model="@Model" />
