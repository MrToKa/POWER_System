@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>MANAGE</b> the Projects, the Orders, the Users and their access to the system.
    </p>

    <hr class="my-4">
    <form>
        <button type="submit" class="btn btn-primary btn-lg" asp-area="Admin" asp-controller="Role" asp-action="Index">
            Manage Roles
        </button>
        <button type="submit" class="btn btn-primary btn-lg" asp-area="Admin" asp-controller="User" asp-action="ManageUsers">Manage Users</button>
        <button type="submit" class="btn btn-primary btn-lg" asp-area="" asp-controller="" asp-action=""
                disabled>
            Manage Projects
        </button>
        <button type="submit" class="btn btn-primary btn-lg" asp-area="" asp-controller="" asp-action=""
                disabled>
            Manage Orders
        </button>
        <button type="submit" class="btn btn-primary btn-lg" asp-area="" asp-controller="" asp-action=""
                disabled>
            Manage Stores
        </button>
        <button type="submit" class="btn btn-primary btn-lg" asp-area="" asp-controller="" asp-action=""
                disabled>
            Manage Site Jobs
        </button>
    </form>
</div>
