@model Microsoft.AspNetCore.Identity.IdentityRole

@{  
    ViewData["Title"] = "Create Role";  
}  

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="Create" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="Name">Role Name</label>
                    <input class="control-label" aria-required="true" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="Create" type="submit" value="Create" class="btn btn-primary">Create Role</button>
                </div>
            </form>
        </section>
    </div>
</div>
<div>
    <a asp-action ="Index">Back to List</a>  
</div>

@section Scripts {  
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");  
    }  
}
